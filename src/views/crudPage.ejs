<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CRUD PAGE</title>
    <link rel="stylesheet" href="">

    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.slim.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
    <div class="container">
        <!-- bootstrap sẽ chia màn hình thành 12 column, vậy column 6 là ở giữa màn hình -->
        <div class="row">
            <!-- col-x để xác định div đó chiếm bao nhiêu ô, mặc định trang web chia thành 12 ô
            từ trái qua phải -->
            <!-- mt là margin-top -->
            <!-- ở đây ta làm quen với đơn vị mới, đó là rem: 1 rem = 3pixel
             nhưng rem là đơn vị được căn chỉnh phù hợp cho các thiết bị
             không giống như pixel sẽ giống nhau trên mọi thiết bị
             cứ coi nó là bước đầu của responsive.
             dưới đây là ví dụ cho đơn vị rem, cho dù tôi cho mt-5 (pixel) thì trên web tự 
             hiểu là 3 rem
            .mt-5, .my-5 {
                margin-top: 3rem !important;
            } -->

            <!-- <div class="col-6">
                <div class="form-group">
                    <label>Email</label>
                    <input type="email" name="email" class="form-control" />
                </div>
            </div> -->

            <!--copy một form có sắn từ link https://getbootstrap.com/docs/4.0/components/forms/-->
            <!-- cài đặt action và định danh method theo chuẩn rest api -->
            <form action="/post-crud" method="POST">
                <div class="form-row">
                    <div class="col-12 mt-5">Create a new user</div>
                    <div class="form-group col-6">
                        <label for="inputEmail4">Email</label>
                        <input type="email" class="form-control" id="email" placeholder="Email" name="email">
                        <!-- tại sao lại có class name ở dòng code trên? tại vì server sẽ căn cứ vào name để lấy dữ
                        liệu chứ không phải id, thật ra id ở đây cx chưa biết tác dụng của nó là gì:)) -->
                        <!-- type là email thì bắt buộc phải có @ -->
                    </div>
                    <div class="form-group col-6">
                        <label for="inputPassword4">Password</label>
                        <input type="password" class="form-control" id="password" placeholder="Password"
                            name="password">
                        <!-- type là password thì khi nhập giao diện sẽ hiển thị chấm tròn -->
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-6">
                        <label for="inputEmail4">First name</label>
                        <input type="text" class="form-control" id="inputEmail4" placeholder="Piscean" name="firstName">
                    </div>
                    <div class="form-group col-6">
                        <label for="inputPassword4">Last name</label>
                        <input type="text" class="form-control" id="inputPassword4" placeholder="Phan" name="lastName">
                    </div>
                </div>


                <div class="form-group">
                    <label for="inputAddress">Address</label>
                    <input type="text" class="form-control" id="inputAddress"
                        placeholder="khu 2 Hoành Cương Thanh Ba Phú Thọ" name="address">
                </div>
                <!-- <div class="form-group">
                    <label for="inputAddress2">Address 2</label>
                    <input type="text" class="form-control" id="inputAddress2"
                        placeholder="Apartment, studio, or floor">
                </div> -->
                <div class="form-row">
                    <div class="form-group col-6">
                        <label for="inputCity">Phone number</label>
                        <input type="text" class="form-control" id="inputCity" name="phoneNumber">
                    </div>
                    <div class="form-group col-3">
                        <label for="inputState">Sex</label>
                        <select id="inputState" class="form-control" name="gender">
                            <option value='M'>Male</option>
                            <option value='F'>Female</option>
                            <option value='M'>Femboy</option>
                            <option value='F'>Tomboy</option>
                            <option value='F'>Futanari</option>
                        </select>
                    </div>
                    <div class="form-group col-3">
                        <label for="inputState">Role</label>
                        <select id="inputState" class="form-control" name="roleId">
                            <option value="R3">Patient</option>
                            <option value="R1">Admin</option>
                            <option value="R2">Doctor</option>

                        </select>
                    </div>
                    <!-- <div class="form-group col-2">
                        <label for="inputZip">Zip</label>
                        <input type="text" class="form-control" id="inputZip">
                    </div> -->
                </div>
                <div class="form-group">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="gridCheck">
                        <label class="form-check-label" for="gridCheck">
                            Check me out
                        </label>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Sign in</button>
            </form>
        </div>
    </div>



</body>

</html>